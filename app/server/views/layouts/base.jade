doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='author', content='')
    meta(name='apple-mobile-web-app-title' content='')
    meta(name='application-name' content='')
    meta(name='msapplication-TileImage' content='')
    meta(name='msapplication-TileColor' content='')

    link(rel='icon' type='image/png' href='')
    link(rel='apple-touch-icon' href='')

    title #{title}

    -// CSS (all other files should be built via gulp, see app/client/main.scss)
    - var cssPath = env === 'production' ? '/dist/main.css' : '/src/main.css'
    link(rel='stylesheet', href='#{cssPath}')

  -// Body and Main Content
  body
    block content

    -// JS (all other files should be built via gulp, see app/client/main.js)
    - var jsPath = env === 'production' ? '/dist/bundle.min.js' : '/src/bundle.js'
    script(src='#{jsPath}')

